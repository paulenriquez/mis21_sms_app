<!DOCTYPE html>
<html>
  <head>
    <title>Mis21SmsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/inbox">Inbox <span class="badge"><%= Inbox.count %></span></a></li>
            <li><a href="/outbox">Outbox <span class="badge"><%= Outbox.count %></span></a></li>
          </ul>
           <p class="navbar-text pull-right">
            <% if user_signed_in? %>
              Logged in as <strong><%= current_user.email %></strong>.
              <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
            <% else %>
              <%= link_to "Register", new_user_registration_path %> | 
              <%= link_to "Login", new_user_session_path %>
            <% end %>
          </p>
          <a type="button" href="/outbox/new" class="btn btn-primary navbar-btn pull-right btn-new-message">New Message</a>
         
        </div>
      </nav>
    </div>
    <div class="container">
  	  <p class="notice"><%= notice %></p>
  	  <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
