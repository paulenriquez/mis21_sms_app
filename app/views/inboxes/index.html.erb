<h4 class="page-title">Inbox Messages</h4>
<table id="inbox-table" class="table table-hover">
	<thead>
		<th class="mobile-number">Mobile Number</th>
		<th class="message">Message</th>
		<th class="timestamp">Received</th>
		<th class="actions"></th>
	</thead>
	<tbody>
		<% if @inboxes.empty? %>
			<tr>
				<td colspan="7"><em>No messages</em></td>
			</tr>
		<% else %>
			<% @inboxes.each do |inbox| %>
				<tr>
					<td><%= inbox.mobile_number %></td>
					<td><%= inbox.message %></td>
					<td><%= inbox.created_at %></td>
					<td>
						<div class="btn-group message-actions" role="group">
							<%= link_to "View", inbox_path(inbox), class: "btn btn-default" %>
							<%= link_to "Forward", forward_inbox_path(inbox), class: "btn btn-default" %>
							<%= link_to "Delete", inbox_path(inbox), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %>
						</div>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>